config BR2_PACKAGE_HYPERION
	bool "Hyperion"
	depends on BR2_INSTALL_LIBSTDCPP
	depends on BR2_PACKAGE_LIBUSB
	depends on BR2_PACKAGE_QT5BASE
	depends on BR2_PACKAGE_QT5BASE_GUI
	depends on BR2_PACKAGE_QT5BASE_NETWORK
	depends on BR2_PACKAGE_QT5BASE_WIDGETS
	depends on BR2_PACKAGE_RPI_FIRMWARE
	depends on BR2_PACKAGE_RPI_USERLAND
	depends on BR2_PACKAGE_PROTOBUF
	help
	  Hyperion is an open source ambient light software.
	  https://github.com/hyperion-project/hyperion

comment "Hyperion needs LIBUSB, QT5BASE, QT5BASE_GUI, QT5BASE_NETWPORK, QT5BASE_WIDGETS, PROTOBUF, and RPI_FIRMWARE"
	depends on !BR2_INSTALL_LIBSTDCPP || !BR2_PACKAGE_LIBUSB || !BR2_PACKAGE_QT5_GUI_MODULE || \
	  !BR2_PACKAGE_QT5BASE || !BR2_PACKAGE_QT5BASE_NETWORK || !BR2_PACKAGE_QT5BASE_GUI || \
	  !BR2_PACKAGE_QT5BASE_WIDGETS || !BR2_PACKAGE_RPI_FIRMWARE || !BR2_PACKAGE_RPI_USERLAND || \
	  !BR2_PACKAGE_PROTOBUF
